{
  "name": "xad-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:extension": "turbo run dev --filter=@xad/extension",
    "dev:api": "turbo run dev --filter=@xad/api",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "turbo run format",
    "build:extension": "turbo run build --filter=@xad/extension",
    "zip:chrome": "bun run build:extension && cd apps/extension && bun run zip",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "resolutions": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@storybook/addon-onboarding": "^9.1.5",
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/react": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "storybook": "^9.1.5",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^2.5.6",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  },
  "packageManager": "bun@1.2.20"
}