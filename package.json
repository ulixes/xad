{
  "name": "xad-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:extension": "turbo run dev --filter=@xad/extension",
    "dev:api": "turbo run dev --filter=@xad/api",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "turbo run format",
    "build:extension": "turbo run build --filter=@xad/extension",
    "zip:chrome": "bun run build:extension && cd apps/extension && bun run zip"
  },
  "devDependencies": {
    "turbo": "^2.5.6"
  },
  "packageManager": "bun@1.2.20"
}