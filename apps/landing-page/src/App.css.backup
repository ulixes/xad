/* Supabase-inspired dark theme */
* {
  box-sizing: border-box;
}

body, html, #root {
  background-color: #0a0a0a !important;
  color: #ededed !important;
  min-height: 100vh;
}

/* All divs default to dark background */
div {
  background-color: transparent;
  color: inherit;
}

/* Main background */
.min-h-screen,
.bg-background {
  background-color: #0a0a0a !important;
  color: #ededed !important;
}

/* Primary backgrounds - green */
.bg-primary,
section.bg-primary {
  background-color: #10b981 !important;
}

.text-primary {
  color: #10b981 !important;
}

/* Text on primary background - dark */
.text-primary-foreground {
  color: #0a0a0a !important;
}

/* Secondary backgrounds */
.bg-secondary {
  background-color: #171717 !important;
}

.bg-secondary\/10 {
  background-color: rgba(23, 23, 23, 0.1) !important;
}

.text-secondary-foreground {
  color: #ededed !important;
}

/* Cards - dark with subtle border */
.bg-card {
  background-color: #111111 !important;
  color: #ededed !important;
  border: 1px solid #262626 !important;
  border-radius: 0.75rem !important;
}

.text-card-foreground {
  color: #ededed !important;
}

/* Muted backgrounds */
.bg-muted\/30 {
  background-color: rgba(44, 40, 37, 0.3) !important;
}

/* Text colors */
.text-foreground {
  color: #ededed !important;
}

.text-muted-foreground {
  color: #737373 !important;
}

/* Borders */
.border-border {
  border-color: #262626 !important;
}

.border {
  border-color: #262626 !important;
}

.border-primary\/20 {
  border-color: rgba(16, 185, 129, 0.2) !important;
}

.border-primary-foreground\/50 {
  border-color: rgba(30, 27, 24, 0.5) !important;
}

/* Hover states for ghost buttons on primary */
.hover\:bg-primary-foreground\/20:hover {
  background-color: rgba(30, 27, 24, 0.2) !important;
}

.hover\:border-primary-foreground\/70:hover {
  border-color: rgba(30, 27, 24, 0.7) !important;
}

/* Footer specific */
.bg-foreground {
  background-color: #111111 !important;
  border-top: 1px solid #262626 !important;
}

.text-background {
  color: #ededed !important;
}

.text-background\/75 {
  color: rgba(237, 237, 237, 0.75) !important;
}

.text-background\/60 {
  color: rgba(237, 237, 237, 0.6) !important;
}

/* Accent colors */
.bg-accent {
  background-color: #484441 !important;
}

.text-accent-foreground {
  color: #d1d5db !important;
}

.hover\:bg-accent:hover {
  background-color: #484441 !important;
}

.hover\:text-accent-foreground:hover {
  color: #d1d5db !important;
}

/* Primary color highlights */
.bg-primary\/5 {
  background-color: rgba(16, 185, 129, 0.05) !important;
}

.bg-primary\/10 {
  background-color: rgba(16, 185, 129, 0.1) !important;
}

/* Gradient backgrounds for sections */
.bg-gradient-to-br.from-primary\/5.to-primary\/10 {
  background: linear-gradient(to bottom right, rgba(16, 185, 129, 0.05), rgba(16, 185, 129, 0.1)) !important;
  border: 1px solid rgba(16, 185, 129, 0.2) !important;
  border-radius: 1rem !important;
}

/* Opacity modifiers */
.text-primary-foreground\/90 {
  color: rgba(30, 27, 24, 0.9) !important;
}

.text-primary-foreground\/80 {
  color: rgba(30, 27, 24, 0.8) !important;
}

/* Remove any white backgrounds */
.bg-white {
  background-color: #2c2825 !important;
  color: #e2e8f0 !important;
}

/* Fix gray backgrounds to dark theme */
.bg-gray-50,
.bg-gray-100 {
  background-color: #2c2825 !important;
  color: #e2e8f0 !important;
}

/* Text on dark backgrounds should be light */
.text-gray-600 {
  color: #9ca3af !important;
}

.text-gray-900 {
  color: #e2e8f0 !important;
}

/* Fix ghost button hover on primary background */
button.border-2.border-primary-foreground\/50 {
  background-color: transparent !important;
  color: #1e1b18 !important;
  border-color: rgba(30, 27, 24, 0.5) !important;
}

button.border-2.border-primary-foreground\/50:hover {
  background-color: rgba(30, 27, 24, 0.2) !important;
  border-color: rgba(30, 27, 24, 0.7) !important;
}

/* Ensure text is always readable */
.text-white {
  color: #e2e8f0 !important;
}

.text-white\/70 {
  color: rgba(226, 232, 240, 0.7) !important;
}

/* Gradient overlays */
.bg-gradient-to-br {
  background: linear-gradient(to bottom right, #818cf8, #484441) !important;
}

/* Remove all yellow/purple test colors if any */
.bg-yellow-100,
.bg-purple-600,
.from-purple-600 {
  background-color: #2c2825 !important;
}

/* Ensure consistent dark theme throughout */
section {
  background-color: #0a0a0a;
  color: #ededed;
}

/* Section containers with rounded corners */
section > div > div:has(> div) {
  border-radius: 1rem;
}

/* FAQ section items */
.rounded-lg {
  border-radius: 0.75rem !important;
}

/* Buttons - but not checkboxes */
button:not([role="checkbox"]) {
  border-radius: 0.5rem !important;
}

/* Hover states */
.hover\:bg-muted\/50:hover {
  background-color: rgba(38, 38, 38, 0.5) !important;
}

/* Input and Select styling to match */
input[type="text"],
input[type="number"],
textarea,
select,
[role="combobox"] {
  background-color: #111111 !important;
  border: 1px solid #262626 !important;
  color: #ededed !important;
}

input[type="text"]:focus,
input[type="number"]:focus,
textarea:focus,
select:focus,
[role="combobox"]:focus {
  border-color: #10b981 !important;
  outline: none !important;
}

/* Dropdown content background */
[role="listbox"],
[data-radix-popper-content-wrapper] {
  background-color: #111111 !important;
  border: 1px solid #262626 !important;
  color: #ededed !important;
}

/* Select options */
[role="option"] {
  color: #ededed !important;
}

[role="option"]:hover,
[role="option"][data-highlighted] {
  background-color: #1a1a1a !important;
}

/* Range input styling */
input[type="range"] {
  -webkit-appearance: none;
  appearance: none;
  height: 6px;
  border-radius: 3px;
  outline: none;
  background: #262626;
}

input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: #10b981;
  cursor: pointer;
  border: 2px solid #0a0a0a;
}

input[type="range"]::-moz-range-thumb {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: #10b981;
  cursor: pointer;
  border: 2px solid #0a0a0a;
}

input[type="range"]::-webkit-slider-thumb:hover {
  background: #22c55e;
  transform: scale(1.1);
}

input[type="range"]::-moz-range-thumb:hover {
  background: #22c55e;
  transform: scale(1.1);
}

/* Remove forced gradient colors */
.bg-gradient-to-r.from-primary\/10.to-primary\/5 {
  background: #111111 !important;
  border: 1px solid #262626 !important;
  border-radius: 1rem !important;
}

/* Custom scrollbar styling */
.scrollbar-thin::-webkit-scrollbar {
  height: 6px;
}

.scrollbar-thin::-webkit-scrollbar-track {
  background: #1a1a1a;
  border-radius: 3px;
}

.scrollbar-thin::-webkit-scrollbar-thumb {
  background: #3a3a3a;
  border-radius: 3px;
}

.scrollbar-thin::-webkit-scrollbar-thumb:hover {
  background: #4a4a4a;
}

/* Line clamp utility */
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Tabs component styling */
[role="tablist"] {
  background-color: #111111 !important;
  border: 1px solid #262626 !important;
}

[role="tab"] {
  color: #737373 !important;
  cursor: pointer !important;
}

[role="tab"]:hover {
  color: #ededed !important;
}

[role="tab"][data-state="active"] {
  background-color: #10b981 !important;
  color: #0a0a0a !important;
}