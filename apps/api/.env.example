# Database
DATABASE_URL=your_database_url_here

# JWT Secret for authentication
JWT_SECRET=your-secret-key-change-this-in-production

# Environment: development | production
# IMPORTANT: 'dev' no longer bypasses security checks
ENVIRONMENT=development

# Escrow wallet address (receives payments)
ESCROW_ADDRESS=0x16a5274cCd454f90E99Ea013c89c38381b635f5b

# Payment configuration
# PAYMENT_CURRENCY: ETH | USDC (optional, defaults based on ENVIRONMENT)
# - production default: USDC on Base Mainnet
# - development default: ETH on Base Sepolia
PAYMENT_CURRENCY=ETH

# ETH/USD conversion rate (only used when PAYMENT_CURRENCY=ETH)
# Used to convert USD campaign amounts to ETH
ETH_USD_RATE=3000

# Privy Configuration (if using Privy)
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret
PRIVY_VERIFICATION_KEY=your_privy_verification_key